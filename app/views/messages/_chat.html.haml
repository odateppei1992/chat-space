.chat
  .chat__group
    .chat-contents
      .name
        = @group.name
      .members
        Members:
        - @group.users.each do |user|
          = user.name
    = link_to "EDIT",edit_group_path(@group),class:"edit_button"

  %hr
  .chat__space
    = render @messages
  .chat__form
    = form_for [@group,@message] do |f|
      = f.text_field :body,class: 'text', placeholder: 'type a message'
      = f.submit class: 'button',value: "SEND"
      = f.label :image do
        = fa_icon "image",class: 'send-icon'
        = f.file_field :image, class: 'hidden'





